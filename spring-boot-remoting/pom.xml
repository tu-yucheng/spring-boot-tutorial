<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <artifactId>spring-boot-remoting</artifactId>
   <version>1.0.0</version>
   <name>spring-boot-remoting</name>
   <packaging>pom</packaging>
   <description>Parent for all projects related to Spring Remoting, except remoting-hessian-burlap</description>
   <!-- remoting-hessian-burlap needs to stick to spring-boot-1, some classes were removed in spring 5 -->

   <parent>
      <groupId>cn.tuyucheng.taketoday.spring-boot-tutorial</groupId>
      <artifactId>parent-boot-2</artifactId>
      <version>1.0.0</version>
      <relativePath>../parent-boot-2</relativePath>
   </parent>

   <modules>
      <module>spring-boot-remoting-hessian-burlap</module>
      <module>spring-boot-remoting-http</module>
      <module>spring-boot-remoting-amqp</module>
      <module>spring-boot-remoting-jms</module>
      <module>spring-boot-remoting-rmi</module>
   </modules>

   <dependencyManagement>
      <dependencies>
         <!-- companion modules -->
         <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>api</artifactId>
            <version>${project.version}</version>
         </dependency>
      </dependencies>
   </dependencyManagement>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>${maven-compiler-plugin.version}</version>
            <configuration>
               <source>${maven.compiler.source}</source>
               <target>${maven.compiler.target}</target>
            </configuration>
         </plugin>
      </plugins>
   </build>
   <properties>
      <maven.compiler.source>11</maven.compiler.source>
      <maven.compiler.target>11</maven.compiler.target>
   </properties>
</project>